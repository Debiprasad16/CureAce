            <!--mobile no-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="@dimen/_20dp"
                >

                <TextView
                    android:id="@+id/mobile_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/_16sp"
                    android:layout_gravity="center"
                    android:textColor="@color/white"

                    android:text="Mobile No."/>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/_10dp"
                    android:background="@drawable/textfield_bg"
                    android:orientation="vertical"
                    android:layout_gravity="center"
                    android:layout_weight="1.6"
                    android:layout_marginTop="@dimen/_10dp"
                    android:layout_marginLeft="@dimen/_10dp"

                    >

                    <EditText
                        android:id="@+id/mobile_et"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:backgroundTint="@android:color/transparent"
                        android:hint="Enter 10 digit mobile  number"
                        android:inputType="number"
                        android:maxLength="10"

                        android:padding="@dimen/_10dp"
                        android:textColor="@color/greencolor"
                        android:textColorHint="#BFBFBF" />

                </RelativeLayout>
            </LinearLayout>


            <!--idproof-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="@dimen/_20dp"
                >

                <TextView
                    android:id="@+id/idproof_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/_16sp"
                    android:layout_gravity="center"
                    android:textColor="@color/white"

                    android:text="ID Proof"/>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/_10dp"
                    android:background="@drawable/textfield_bg"
                    android:orientation="vertical"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/_10dp"
                    android:layout_marginTop="@dimen/_10dp"

                    >

                    <EditText
                        android:id="@+id/idproof_et"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:backgroundTint="@android:color/transparent"
                        android:hint="Aadhar Number/Passport Number/Identity Card"

                        android:inputType="text"
                        android:maxLines="1"
                        android:padding="@dimen/_10dp"
                        android:textColor="@color/greencolor"
                        android:textColorHint="#BFBFBF" />

                </RelativeLayout>
            </LinearLayout>

            <!--Address-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="@dimen/_20dp"
                >

                <TextView
                    android:id="@+id/address_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/_16sp"
                    android:layout_gravity="center"
                    android:textColor="@color/white"

                    android:text="Address"/>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/_10dp"
                    android:background="@drawable/textfield_bg"
                    android:orientation="vertical"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/_10dp"
                    android:layout_marginTop="@dimen/_10dp"

                    >

                    <EditText
                        android:id="@+id/address_et"
                        android:layout_width="match_parent"
                        android:layout_height="80dp"
                        android:backgroundTint="@android:color/transparent"
                        android:inputType="textMultiLine"
                        android:padding="@dimen/_10dp"
                        android:hint="Enter address"

                        android:textColor="@color/greencolor"
                        android:textColorHint="#BFBFBF" />

                </RelativeLayout>
            </LinearLayout>



            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/signup_btn"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:text="Update Profile"
                android:background="@drawable/solid_bg_app_color_round_corner"
                android:layout_gravity="center"
                android:layout_marginTop="40dp"
                />





        </LinearLayout>

    </ScrollView>
</RelativeLayout>