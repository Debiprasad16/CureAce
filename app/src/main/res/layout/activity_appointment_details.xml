<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/greencolor"
    tools:context=".activity.doctor.AppointmentDetailsActivity">

    <androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/cardview"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content"
        android:elevation="@dimen/_10dp"
        app:cardBackgroundColor="@color/app_color"

        app:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <TextView
                android:id="@+id/appointmentid_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                 android:text="idfsfsf"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:layout_margin="@dimen/_10dp"
                android:textAlignment="center"
                android:textSize="17sp"/>

            <TextView
                android:id="@+id/name_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:text="Name"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:layout_margin="@dimen/_10dp"
                android:textSize="@dimen/_20sp"/>

            <TextView
                android:id="@+id/expertise_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:text="expertise"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:layout_marginLeft="@dimen/_10dp"
                android:layout_marginRight="@dimen/_10dp"
                android:textSize="@dimen/_16sp"/>

            <TextView
                android:id="@+id/h_name_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:text="Hospital Name"
                android:textStyle="bold"

                android:textColor="@color/white"
                android:layout_marginLeft="@dimen/_10dp"
                android:layout_marginRight="@dimen/_10dp"
                android:layout_marginBottom="@dimen/_10dp"
                android:textSize="14sp"/>

            <TextView
                android:id="@+id/email_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:text="Email"
                android:textStyle="bold"

                android:textColor="@color/white"
                android:layout_marginLeft="@dimen/_10dp"
                android:layout_marginRight="@dimen/_10dp"
                android:layout_marginBottom="@dimen/_10dp"
                android:textSize="14sp"/>

            <TextView
                android:id="@+id/mobile_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:text="Mobile"
                android:textStyle="bold"

                android:textColor="@color/white"
                android:layout_marginLeft="@dimen/_10dp"
                android:layout_marginRight="@dimen/_10dp"
                android:textSize="14sp"/>

            <TextView
                android:id="@+id/date_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:text="date"
                android:textStyle="bold"

                android:textColor="@color/white"
                android:layout_marginTop="@dimen/_20dp"
                android:layout_marginLeft="@dimen/_10dp"
                android:layout_marginRight="@dimen/_10dp"
                android:layout_marginBottom="@dimen/_20dp"

                android:textSize="16sp"/>

            <TextView

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:text="Kindly visit half an hour before appointment date schedule"
                android:textStyle="bold"

                android:textColor="@color/greencolor"
                android:layout_marginTop="@dimen/_20dp"
                android:layout_marginLeft="@dimen/_10dp"
                android:layout_marginRight="@dimen/_10dp"
                android:layout_marginBottom="@dimen/_20dp"

                android:textSize="14sp"/>







        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>